<%- include('partials/header.ejs') %>
<br>
<div class="container">
    <br>
    <div class="row justify-content-md-center">
        <h2>Book Manager:</h2>
    </div>
    <div class="row justify-content-md-center">
        <p>This form will add a book if it doesn't find the FSBN number, or update the existing FSBN number. </p>
    </div>
    <div class="row justify-content-md-center">
        <div class="col col-md-6">
            <form action="/updateBook" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" placeholder="1984" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="author">Author:</label>
                        <input type="text" class="form-control" id="author" placeholder="George Orwell" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="ISBN">ISBN: </label>
                        <input type="text" class="form-control" id="ISBN" placeholder="9780451524935" required>
                    </div>

                    <div class="form-group col">
                        <label for="genre">Genre:</label>
                        <input type="text" class="form-control" placeholder="Science Fiction" id="genre">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="year">Year</label>
                        <input type="number" class="form-control" id="year">
                    </div>
                </div>
                <button type="submit"class="btn btn-primary">Add/Update Book</button>
            </form>
        </div>

    </div>
    <br>
    <hr>
    <div class="row justify-content-md-center">
        <h3>Delete Book:</h3>
    </div>
    <div class="row justify-content-md-center">
        <div class="col col-md-6">
            <form>
                <div class="form-row">
                    <div class="form-group col">

                        <label for="ISBN2">ISBN: </label>
                        <input type="text" class="form-control" id="ISBN2" placeholder="9780451524935" required>
                    </div>


                </div>
                <button type="submit" class="btn btn-primary">Delete Book</button>
            </form>
        </div>





        <br>
    </div>

    <%- include('partials/footer.ejs') %>